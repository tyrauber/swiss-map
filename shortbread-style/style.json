{
  "version": 8,
  "name": "Shortbread style",
  "sources": {
    "shortbread": {
      "type": "vector",
      "url": "tilejson.json"
    }
  },
  "glyphs": "https://tiles.ballometer.io/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "ocean",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "ocean",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "hsl(205, 56%, 73%)"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "water_polygons",
      "filter": [
        "all",
        [
          "==",
          "kind",
          "water"
        ]
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "hsl(205, 56%, 73%)"
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "land",
      "filter": [
        "in",
        "kind",
        "wood"
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "#ceead6"
      }
    }
  ],
  "id": "shortbread-style"
}