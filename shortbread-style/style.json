{
  "version": 8,
  "name": "Shortbread style",
  "sources": {
    "shortbread": {
      "type": "vector",
      "url": "tilejson.json"
    }
  },
  "glyphs": "https://tiles.ballometer.io/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "ocean",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "ocean",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "hsl(205, 56%, 73%)"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "water_polygons",
      "filter": [
        "all",
        [
          "==",
          "kind",
          "water"
        ]
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "hsl(205, 56%, 73%)"
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "land",
      "filter": [
        "in",
        "kind",
        "wood"
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "#ceead6"
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "land",
      "filter": [
        "all",
        [
          "in",
          "kind",
          "residential",
          "industrial",
          "cemetery",
          "park",
          "farmyard",
          "commercial"
        ]
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "#dee0e4",
        "fill-opacity": {
          "stops": [
            [
              13.5,
              1.0
            ],
            [
              14.5,
              0.0
            ]
          ]
        }
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "shortbread",
      "source-layer": "buildings",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "#f1f3f4"
      }
    },
    {
      "id": "buildings_outline",
      "type": "line",
      "source": "shortbread",
      "source-layer": "buildings",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "line-color": "#dee0e4"
      }
    }
  ],
  "id": "shortbread-style"
}