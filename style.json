{
  "version": 8,
  "name": "SwissMap",
  "sources": {
    "baremaps": {
      "type": "vector",
      "url": "http://[::]:8080/data/output.json"
    },
    "relief_shading": {
      "type": "raster",
      "tiles": [
        "https://wmts.geo.admin.ch/1.0.0/ch.swisstopo.leichte-basiskarte_reliefschattierung/default/current/3857/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 22
    }
  },
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "raster",
      "source": "relief_shading"
    },
    {
      "id": "landuse_forest",
      "type": "fill",
      "source": "baremaps",
      "source-layer": "landuse",
      "filter": [
        "all",
        [
          "==",
          "landuse",
          "forest"
        ]
      ],
      "paint": {
        "fill-color": "rgba(195, 222, 179, 0.5)",
        "fill-antialias": true
      }
    },
    {
      "id": "landuse_not_forest",
      "type": "fill",
      "source": "baremaps",
      "source-layer": "landuse",
      "filter": [
        "all",
        [
          "!=",
          "landuse",
          "forest"
        ]
      ],
      "paint": {
        "fill-color": "hsl(47, 13%, 86%)",
        "fill-opacity": 0.7,
        "fill-antialias": true
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "baremaps",
      "source-layer": "water",
      "paint": {
        "fill-color": "hsl(205, 56%, 73%)",
        "fill-antialias": true,
        "fill-outline-color": "hsl(205, 56%, 80%)"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "baremaps",
      "source-layer": "waterway",
      "paint": {
        "line-width": 1,
        "line-color": "hsl(205, 56%, 73%)"
      }
    },
    {
      "id": "railway_background",
      "type": "line",
      "filter": 
        [
          "!=",
          "tunnel",
          "yes"
        ]
      ,
      "source": "baremaps",
      "source-layer": "railway",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-width": [
          "interpolate",
          [
            "exponential",
            1.2
          ],
          [
            "zoom"
          ],
          4,
          0,
          20,
          8
        ],
        "line-color": "rgb(112, 112, 112)"
      }
    },
    {
      "id": "railway_dashes",
      "type": "line",
      "filter": 
        [
          "!=",
          "tunnel",
          "yes"
        ]
      ,
      "source": "baremaps",
      "source-layer": "railway",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-width": [
          "interpolate",
          [
            "exponential",
            1.2
          ],
          [
            "zoom"
          ],
          4,
          0,
          20,
          6
        ],
        "line-color": "rgb(255, 255, 255)",
        "line-dasharray": [
          2,
          4
        ]
      }
    },
    {
      "id": "railway_tunnel",
      "type": "line",
      "filter": 
        [
          "==",
          "tunnel",
          "yes"
        ]
      ,
      "source": "baremaps",
      "source-layer": "railway",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-width": [
          "interpolate",
          [
            "exponential",
            1.2
          ],
          [
            "zoom"
          ],
          4,
          0,
          20,
          6
        ],
        "line-color": "rgb(200, 200, 200)",
        "line-dasharray": [
          2,
          4
        ]
      }
    }
  ],
  "center": [
    6.6323,
    46.5197
  ],
  "metadata": {
    "maputnik:renderer": "mbgljs"
  },
  "zoom": 14
}